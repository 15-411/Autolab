<li>
  <%= link_to a.name, course_attachment_path(@course, a) %>  
  <% if @cud.instructor? then %>
    <% if attachment.assessment.nil? then %>
      <%= link_to 'Edit', [:edit, @course, attachment] %>
      <%= link_to 'Delete', [@course, attachment], method: :delete %>
    <% else %>
      <%= link_to 'Edit', [:edit, @course, attachment.assessment, attachment] %>
      <%= link_to 'Delete', [@course, attachment.assessment, attachment], method: :delete %>
    <% end %>
  <% end %>
</li>
