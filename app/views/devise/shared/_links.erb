<% devise_mapping ||= Devise.mappings[:user]%>

<% if Rails.env == "development" %>
  <%= link_to "Developer Login", "/home/developer_login" %><br />
<% end %>

<%- if controller_name != 'sessions' %>
  <%= link_to "Sign in", new_session_path(:user) %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(:user) %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(:user) %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(:user) %><br />
<% end -%>


<%- if devise_mapping.omniauthable? %>
  <%- devise_mapping.to.omniauth_providers.each do |provider| %>
		<% if provider.to_s.titleize == "Shibboleth" %>
			<b><%= link_to "Sign in with your CMU account", user_omniauth_authorize_path(provider) %></b><br />
		<% else %>
			<%= link_to "Sign in with #{provider.to_s.titleize}", user_omniauth_authorize_path(provider) %><br />
		<% end %>
  <% end -%>
<% end -%>
