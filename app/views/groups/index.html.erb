<p id="notice"><%= notice %></p>

<h1>Listing Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= link_to 'Show', [@course, @assessment, group] %></td>
        <td><%= link_to 'Edit', [:edit, @course, @assessment, group] %></td>
        <td><%= link_to 'Destroy', [@course, @assessment, group], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group', [:new, @course, @assessment, :group] %>
